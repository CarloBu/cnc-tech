---
import '@/styles/fonts.css';
export interface Props {
	title?: string;
}

const { title = 'CNC' } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<link rel='preload' href='/fonts/protomono-semibold.woff2' as='font' type='font/woff2' crossorigin='anonymous' />
		<link rel='preload' href='/fonts/suisse-intl-regular.woff2' as='font' type='font/woff2' crossorigin='anonymous' />
		<link rel='preload' href='/fonts/suisse-intl-regular.woff2' as='font' type='font/woff2' crossorigin='anonymous' />
		<link rel='preload' href='/fonts/suisse-intl-regular.woff' as='font' type='font/woff' crossorigin='anonymous' />
		<title>
			{title}
		</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: auto;
	}

	body {
		overflow-x: hidden;
		background: linear-gradient(to bottom, #9da4ac 0%, #ced1d0 100%);
		background-attachment: fixed;
	}

	html {
		scrollbar-width: none;
		-ms-overflow-style: none;
	}

	html::-webkit-scrollbar {
		display: none;
	}
</style>
